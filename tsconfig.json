{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node", "vitest/globals"],
        "declaration": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "dom", "dom.iterable"],
        "baseUrl": "./",
        "allowJs": true,
    },
    "include": [
        "./index.ts",
        "**/*.ts",
        "**/*.tsx",
        "*.config.ts",
        ".storybook/**/*",
    ],
    "exclude": ["dist/", "node_modules"],
}
